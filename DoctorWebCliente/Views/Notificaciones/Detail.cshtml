@using DoctorWebCliente.Controllers.Helpers
@model DoctorWebCliente.Models.Notificacion

@{
    ViewData.indicarPaginaActual(EnumMenuItems.NotificacionGuardar);
}

@* Opcional *@
@section StyleContent {
    <link href="~/Assets/Plugins/datatables/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Assets/Plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/Plugins/taggedText/TaggedText.css" rel="stylesheet" />
    <link href="~/Assets/Plugins/taggedText/TaggedText.css" rel="stylesheet" />
}

@* Opcional *@
@section ScriptContent {
    <script src="~/Assets/Plugins/jquery-serialize-object/dist/jquery.serialize-object.min.js"></script>
    <script src="~/Assets/Plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Assets/Plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Assets/Plugins/taggedText/TaggedText.js"></script>
    <script src="~/Assets/Js/NotificacionDetails.js"></script>
}

@* Requerido *@
@section TitleContent {
    <h1>
        Gestion de Notificaciones
        <small>Conjunto de eventos disponibles en el sistema.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Inicio</a></li>
        <li class="active">Notificaciones</li>
    </ol>
}

<!-- Main content -->
<section class="content">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Notificacion</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm(actionName: Model.Codigo == 0 ? "Create" : "Edit", controllerName: "Notificaciones", method: FormMethod.Post, htmlAttributes: new { @id = "FormEvento", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Codigo)
            @Html.HiddenFor(model => model.Contenido)
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        @if (ViewData.ModelState["Nombre"] != null && ViewData.ModelState["Nombre"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.Nombre)
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                        @if (ViewData.ModelState["Descripcion"] != null && ViewData.ModelState["Descripcion"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.Descripcion)
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Asunto, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Asunto, new { @class = "form-control" })
                        @if (ViewData.ModelState["Asunto"] != null && ViewData.ModelState["Asunto"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.Asunto)
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoDestinatarios, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.TipoDestinatarios, (SelectList)ViewData["TiposDeDestinatario"], new { @class = "form-control" })
                        @if (ViewData.ModelState["TipoDestinatarios"] != null && ViewData.ModelState["TipoDestinatarios"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.TipoDestinatarios)
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Destinatarios, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Destinatarios, new { @class = "form-control" })
                        @if (ViewData.ModelState["Destinatarios"] != null && ViewData.ModelState["Destinatarios"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.Destinatarios)
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoContenido, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.TipoContenido, (SelectList)ViewData["TiposDeContenido"], new { @class = "form-control" })
                        @if (ViewData.ModelState["TipoContenido"] != null && ViewData.ModelState["TipoContenido"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.TipoContenido)
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Contenido, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        <p><strong>Nota: </strong>Puedes usar la siguiente estructura <code>{{NombreEtiquetas}}</code> para colocar etiquetas.</p>
                        <textarea id="NotificacionContenido" class="form-control">
                            @Model.Contenido
                        </textarea>
                        @if (ViewData.ModelState["Contenido"] != null && ViewData.ModelState["Contenido"].Errors.Count > 0)
                        {
                            @Html.ValidationMessageFor(model => model.Contenido)
                        }
                    </div>
                </div>
                @if (ViewData.ModelState["Error"] != null && ViewData.ModelState["Error"].Errors.Count > 0)
                {
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            @Html.ValidationMessage("Error")
                        </div>
                    </div>
                }
            </div>
                <!-- /.box-body -->
            <div class="box-footer">
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary" value="Create">
                        <i class="fa fa-fw fa-edit"></i>Guardar
                    </button>
                    <a class="btn btn-default" href="@Url.Action("Index")">
                        <i class="fa fa-fw fa-backward"></i>Regresar
                    </a>
                </div>
            </div>
                <!-- /.box-footer -->
        }

        <div>
        </div>
    </div>
    <!-- /.box-body -->
</section>