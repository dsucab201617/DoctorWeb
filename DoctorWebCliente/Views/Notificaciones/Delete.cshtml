@using DoctorWebCliente.Controllers.Helpers
@model DoctorWebCliente.Models.Notificacion
@{
    ViewData.indicarPaginaActual(EnumMenuItems.NotificacionGuardar);
}

@* Opcional *@
@section StyleContent {
}

@* Opcional *@
@section ScriptContent {
}

@* Requerido *@
@section TitleContent {
    <h1>
        Gestion de Eventos
        <small>Conjunto de eventos disponibles en el sistema.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Inicio</a></li>
        <li class="active">Eventos</li>
    </ol>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Eliminar Elemento</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <p>¿Estas seguro que deseas eliminar este elemento (<strong>@Html.DisplayFor(model => model.Nombre)</strong>)?</p>
            <p>Descripcion: <strong>@Html.DisplayFor(model => model.Descripcion)</strong></p>
            @using (Html.BeginForm(actionName: "Delete", controllerName: "Notificaciones", method: FormMethod.Post)){
            <p class="pull-right">
                @Html.HiddenFor(model => model.Codigo)
                <input class="btn btn-danger btn-small" type="submit" value="Eliminar" /> |
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default btn-small"})
            </p>
            }
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>